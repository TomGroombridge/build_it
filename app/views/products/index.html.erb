 <div id="filters" class="ui seven column stackable grid" style="background: #35464f">
      <div class="column">
        <button class="ui inverted red button" data-filter="*">
          <span class="web">All</span>
        </button>
      </div>
      <div class="column">
        <button class="ui inverted yellow button " data-filter=".shoes">
          <span class="web">women’s footwear</span>
        </button>
      </div>
      <div class="column">
        <button class="ui inverted blue button text" data-filter=".socks">
          <span class="web">men’s footwear</span>
        </button>
      </div>
      <div class="column">
        <button class="ui inverted orange button " data-filter=".health">
          <span class="web">women’s casual</span>
        </button>
      </div>
      <div class="column">
        <button class="ui inverted green button " data-filter=".music">
          <span class="web">men’s casual</span>

        </button>
      </div>
      <div class="column">
        <button class="ui inverted purple button " data-filter=".other">
          <span class="web">women’s formal</span>
        </button>
      </div>
      <div class="column">
        <button class="ui inverted purple button " data-filter=".other">
          <span class="web">man’s formalwear</span>
        </button>
      </div>
  </div>
<div class="ui special cards isotope">
	<% @products.each do |product| %>
	  <div class="element-item transition card <%= product.category %>"  data-category="<%= product.category %>">
	    <div class="dimmable image">
	      <div class="ui dimmer">
	        <div class="content">
	          <div class="center">
  						<%= form_for @order_item, remote: true do |f| %>
			          <%= f.hidden_field :quantity, value: 1, min: 1 %>
							  <%= f.hidden_field :product_id, value: product.id %>
		            <%= f.submit "Add to Cart", :class => "ui inverted button" %>
							<% end %>
		        </div>
		      </div>
		    </div>
		    <%= image_tag "shoe.jpeg"%>
		  </div>
		  <div class="content">
		    <a class="header"><%= product.name %></a>
		  	<div class="meta">
		      <span class="date"><%= number_to_currency product.price %></span>
		    </div>
		  </div>
		  <div class="extra content">
	      <a>
	        <i class="users icon"></i>
	        <%= product.stock %> in stock
	      </a>
	    </div>
		</div>
	<% end %>
</div>































